        <seg>
          libtumbler-1.so and
          several under /usr/lib/tumbler-1/plugins/
        </seg>
        <seg>
          /etc/xdg/tumbler
          /usr/include/tumbler-1,
          /usr/lib/tumbler-1 and
          /usr/share/gtk-doc/html/tumbler

        </seg>
