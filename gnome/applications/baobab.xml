        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Baobab Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="adwaita-icon-theme"/>,
