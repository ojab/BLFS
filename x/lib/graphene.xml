        </para>
      </listitem>
    </itemizedlist>

    <bridgehead renderas="sect3">Graphene Dependencies</bridgehead>

    <bridgehead renderas="sect4">Required</bridgehead>
    <para role="required">
      <xref linkend="glib2"/> and
